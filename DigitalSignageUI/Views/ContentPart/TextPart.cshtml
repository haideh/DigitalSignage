@model DigitalSignageUI.Models.Entity.EditContentTemplateInfo



<div class="widgetText">
    <div class="marquee up">
        <p ng-repeat="x in sliderTextList" data-id="{{x.id}}" data-interval="{{x.interval}}" data-content_ad_id="{{x.content_ad_id}}" data-ad_title="{{x.title}}">{{x.description}}</p>

    </div>
</div>

  @if (Model.content_ad_id != 0)
  {

        <a href="@Url.Action("EditContentSelector", "Edit", new { contentId = Model.content_ad_id, type = 3, position = Model.position })">Edit</a>
    }