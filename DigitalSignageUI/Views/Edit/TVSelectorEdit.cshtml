<div class="editPackagePage">
    <div class="editPackageContent">

        <div class="rowSelectHeader">
            <div class="editPackageTitle">
                1.
                لیست تمامی پکیج های زنده جهت انتخاب
            </div>
            <div class="editPackageSearchPlace">
                <input class="inputSearch"  type="text" id="search" placeholder="جستجوی نام پکیج" ng-keyup="keyUpImageList()" />
                @*<a class="editPackageBtnSearch" ng-click="keyUpImageList()"><span class="icon" data-icon="&#xe0b7;"></span></a>*@
            </div>
        </div>

        <div class="rowSelectA">
            <div ng-repeat="x in liveResultList" data-id="{{x.id}}" data-channel="{{x.channel}}" data-title="{{x.title}}" ng-click="clearSelectPackageInf()" class="packageItem fullImage serach-result">
                <div class="packageItemPreview">
                    <img src="/data/icon_tv/{{x.nameId}}.gif">
                </div>
                <div class="packageItemDivider">

                    <div class="row">
                        <a class="packageItemBtnAdd" ng-click="addOrRemAdsInLiveList(x , 'add')"><span class="icon" data-icon="&#xe05b;"></span></a>
                        @*<a class="packageItemBtnDelete"><span class="icon" data-icon="&#xe0da;"></span></a>*@
                    </div>

                    <div class="row">
                        <div class="packageItemTitle">
                            <span class="icon" data-icon="&#xe256;"></span>&nbsp;
                            {{x.title}}
                        </div>
                    </div>

                </div>
            </div>
        </div>


        <div class="rowSelectHeader">
            <div class="editPackageTitle">
                2.
                پکیج های انتخاب شده جهت پخش
            </div>
        </div>
        <div class="rowSelectB">

            <div ng-repeat="x in liveResultAdsContentList" data-id="{{x.id}}" data-channel="{{x.channel}}" data-title="{{x.title}}" ng-click="selectPackageInf(x)" class="packageItem fullImage serach-result">
                <div class="packageItemPreview">
                    <img src="/data/icon_tv/{{x.nameId}}.gif">
                </div>
                <div class="packageItemDivider">

                    <div class="row">
                        <a class="packageItemBtnDelete" ng-click="addOrRemAdsInLiveList(x , 'remove')"><span class="icon" data-icon="&#xe0da;"></span></a>
                        @*<a class="packageItemBtnDelete"><span class="icon" data-icon="&#xe0da;"></span></a>*@
                    </div>

                    <div class="row">
                        <div class="packageItemTitle">
                            <span class="icon" data-icon="&#xe256;"></span>&nbsp;
                            {{x.title}}
                        </div>
                    </div>

                </div>
            </div>

            
        </div>
        @*<div class="panelToggle rowSelectHeader">
            <div class="editPackageTitle">
                3.
                تنظیم مدت زمان نمایش
            </div>
            <div class="editPackageName">
             
            </div>
            <div class="editPackageDesc">
                <input class="inputTxt" type="number" placeholder="زمان بر حسب ثانیه" ng-model="selectedPackage.interval">
            </div>
            
        </div>*@


    </div>
    <div class="row rowSelectHeader">
        <div class="col4">
        </div>
        <div class="col4">
            <div class="col6">
                <a class="btnPageOk" ng-click="saveAdsItemPackage('lives')">
                    <span class="icon" data-icon="&#xe042;"></span>
                    <span class="txt">تایید و ذخیره</span>
                </a>
            </div>
            <div class="col6">
                <a class="btnPageNOk" ng-click="cancelSaveAds()">

                    <span class="icon" data-icon="&#xe036;"></span>
                    <span class="txt">انصراف</span>
                </a>
            </div>
        </div>
    </div>
   
</div>

